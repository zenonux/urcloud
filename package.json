{
  "private": true,
  "workspaces": [
    "packages/*",
    "play"
  ],
  "scripts": {
    "dev": "pnpm -C play dev",
    "build": "pnpm run -C internal/build start",
    "clean:dist": "rimraf dist",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean"
  },
  "dependencies": {
    "@urcloud/components": "workspace:*",
    "dayjs": "^1.11.3"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "vue": "^3.2.37",
    "unplugin-vue-define-options": "^0.6.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@urcloud/build-utils": "workspace:^0.0.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite"
      ]
    }
  }
}
